<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_store_cv_store"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_store_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toko A"
            android:textAppearance="?textAppearanceBody1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_store_store_cluster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cluster : Small"
            android:textAppearance="?textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_store_store_name"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_store_store_tt_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TT Regular - IRTM Big Store"
            android:textAppearance="?textAppearanceBody2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_store_store_cluster"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_store_iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_location_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_store_store_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/item_store_iv_location"
            app:layout_constraintStart_toStartOf="@id/item_store_iv_location"
            app:layout_constraintTop_toBottomOf="@id/item_store_iv_location"
            tools:text="%s m" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_store_iv_checked"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_checklist_circle_48"
            app:layout_constraintEnd_toStartOf="@+id/item_store_iv_location"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>